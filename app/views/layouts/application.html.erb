<!DOCTYPE html>
<html>
<head>
  <title>Project12Rails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="navcontainer">
		<ul id="navlist">
		  <li><%= link_to 'Home', root_path %></li>
		  <li><%= link_to 'About', about_path %></li>
		  <li><%= link_to 'Cat Pictures', cat_pictures_path %></li>
      <li><%= link_to 'Wolves Directory', wolves_path %></li>
      <li><%= link_to 'Recyclers Directory', recyclers_path %></li>
		</ul>
	</div>

  <% if user_signed_in? %>
    <li>Signed in in as <%= current_user.email %></li>
    <li><%= link_to "Sign Out", sign_out_path, method: :delete %></li>
  <% else %>
    <li><%= link_to "Sign In", sign_in_path %></li>
  <% end %>

  <% flash.each do |type, message| %>
    <div class="<%= type %>">
      <p><%= message %></p>
    </div>
  <% end %>
	
<%= yield %>

</body>
</html>
