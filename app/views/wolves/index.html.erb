<p id="notice"><%= notice %></p>

<h1>Listing Wolves</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Species</th>
      <th>Pack rank</th>
      <th>Pack number</th>
      <th>Is alive?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wolves.each do |wolf| %>
      <tr>
        <td><%= wolf.name %></td>
        <td><%= wolf.species %></td>
        <td><%= wolf.pack_rank %></td>
        <td><%= wolf.pack_number %></td>
        <td><%= wolf.is_alive %></td>
        <td><%= link_to 'Show', wolf %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_wolf_path(wolf) %></td>
        <td><%= link_to 'Destroy', wolf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Wolf', new_wolf_path %>
<% end %>
